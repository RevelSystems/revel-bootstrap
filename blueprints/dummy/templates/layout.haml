!!! 5
%html
  %head
    %title= "Revel bootstrap"
    %meta{ :content => "RevelSystems bootstrap website.", :name => "description" }
    %meta{ :content => "revelsystems.com", :name => "author" }
    %meta{ :name => "viewport", :content => "width=device-width, initial-scale=1.0"}
    {% assets "app.css" %}
    %link{ :href => "{{ ASSET_URL }}", :media => "screen", :rel => "stylesheet" }
    {% endassets %}
    {% assets "favicon.ico" %}
    %link{ :href => "{{ favicon_url }}", :type => "image/x-icon", :rel => "shortcut icon"}
    {% endassets %}
  %body
    #wrap
      {% block header %}
      <!-- Fixed navbar -->
      <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="#">Project name</a>
          </div>
          <div class="collapse navbar-collapse">
            <ul class="nav navbar-nav">
              <li class="active"><a href="#">Home</a></li>
              <li><a href="#about">About</a></li>
              <li><a href="#contact">Contact</a></li>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Dropdown <b class="caret"></b></a>
                <ul class="dropdown-menu">
                  <li><a href="#">Action</a></li>
                  <li><a href="#">Another action</a></li>
                  <li><a href="#">Something else here</a></li>
                  <li class="divider"></li>
                  <li class="dropdown-header">Nav header</li>
                  <li><a href="#">Separated link</a></li>
                  <li><a href="#">One more separated link</a></li>
                </ul>
              </li>
            </ul>
          </div><!--/.nav-collapse -->
        </div>
      </div>
      {% endblock %}


      .container
      {% block content %}
      {% assets "logo.png" %}
        %img{ :class => "logo", :src => "{{ ASSET_URL }}" }
      {% endassets %}
        .page-header
          %h1 Some header here
        %p{ :class => "lead" } Some text here
      {% endblock %}

    {% block footer %}
    #footer
      .container
        %p{ :class => "text-muted credit"} &copy; Copyright 2013 by
          %a{ :href => "http://revelsystems.com/" } Revel Systems
    {% endblock %}

    {% assets "app.js" %}
    %script{ :src => "{{ ASSET_URL }}", :type => "text/javascript" }
    {% endassets %}